extends layout

block pageScript
	script(src = '/javascripts/index.js')

block pageStyleSheet
	link(rel='stylesheet', href='/stylesheets/index.css')

block content
	div#carousel-example-generic.carousel.slide(data-ride="carousel")
		ol.carousel-indicators
			li(data-target="#carousel-example-generic",data-slide-to="0").active
			li(data-target="#carousel-example-generic",data-slide-to="1")
			li(data-target="#carousel-example-generic",data-slide-to="2")
		div.carousel-inner
			div.item.active
				img#img1(src = '/images/img1.jpg')
				div.carousel-caption
					h3 Contribute To Database
					p Help us build up the lol database
			div.item
				img#img2(src = '/images/img2.jpg')
				div.carousel-caption
					h3 Search Champions
					p Search champions and view their information
			div.item
				img#img3(src = '/images/img3.jpg')
				div.carousel-caption
					h3 View Items
					p Search for items, add your favorite build
		a.left.carousel-control(href = '#carousel-example-generic',data-slide="prev")
			span.glyphicon.glyphicon-chevron-left
		a.right.carousel-control(href="#carousel-example-generic",data-slide="next")
			span.glyphicon.glyphicon-chevron-right