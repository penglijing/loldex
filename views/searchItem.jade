extends layout
block pageStyleSheet
	link(rel='stylesheet', href='/stylesheets/searchItem.css')

block content
	div#searchContent.col-md-3
		h3 Search Item
		div.panel-group#accordion(style = "margin-top:10px")
			div.panel.panel-default
				div.panel-heading
					h4.panel-title
						a(data-toggle="collapse", data-parent="#accordion", href="#defense")
							b Defense
				div#defense.panel-collapse.collapse.in
					div.panel-body
						div
							input(type="checkbox").search_item_cret#health
							label(for = "health") Health
						div
							input(type="checkbox").search_item_cret#magicResist
							label(for = "magicResist") Magic Resist
						div
							input(type="checkbox").search_item_cret#healthRegen
							label(for = "healthRegen") Health Regen
						div
							input(type="checkbox").search_item_cret#armor
							label(for = "armor") Armor

			div.panel.panel-default
				div.panel-heading
					h4.panel-title
						a(data-toggle="collapse", data-parent="#accordion", href="#attack")
							b Attack
				div#attack.panel-collapse.collapse
					div.panel-body
			div.panel.panel-default
				div.panel-heading
					h4.panel-title
						a(data-toggle="collapse", data-parent="#accordion", href="#magic")
							b Magic
				div#magic.panel-collapse.collapse
					div.panel-body
			div.panel.panel-default
				div.panel-heading
					h4.panel-title
						a(data-toggle="collapse", data-parent="#accordion", href="#misc")
							b Misc
				div#misc.panel-collapse.collapse
					div.panel-body
			div.panel.panel-default
				div.panel-heading
					h4.panel-title
						a(data-toggle="collapse", data-parent="#accordion", href="#map")
							b Map
				div#map.panel-collapse.collapse
					div.panel-body
			div.panel.panel-default
				div.panel-heading
					h4.panel-title
						a(data-toggle="collapse", data-parent="#accordion", href="#keyWord")
							b Key Word
				div#keyWord.panel-collapse.collapse
					div.panel-body
	div#searchResult.col-md-6
		h3 Search Result